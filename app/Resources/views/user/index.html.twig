{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Last name</th>
                <th>First name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Project</th>
                <th>Task</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                {%  for project in user.projetU %}
                    <td>{{ dump(project) }}</td>
                {% endfor %}
                {%  for task in user.tacheU %}
                    <td>{{ dump(task) }}</td>
                {% endfor %}

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_profile_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fos_user_registration_register') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
